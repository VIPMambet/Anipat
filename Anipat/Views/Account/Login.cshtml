@model Login

@{
	ViewData["Title"] = "Login";
	ViewData["Keywords"] = "Login";
}

<div class="row">
	<div class="col-12">
		<h2 class="contact-title">Log in from</h2>
	</div>
	<div class="col-lg-8">
		<form class="form-contact contact_form" asp-action="Login" asp-controller="Account" method="post" id="">
			<div class="row">
				<div class="col-12">
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<input class="form-control valid" asp-for="Email" id="name" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your email'" placeholder="Enter your name">
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<input class="form-control valid" asp-for="Password" id="email" type="password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter password '" placeholder="Email">
					</div>
				</div>
				<div class="col-12">
				</div>
			</div>
			<div class="form-group mt-3">
				<button type="submit" class="button button-contactForm boxed-btn">Login</button>
			</div>
			<div asp-validation-summary="All"></div>
		</form>
	</div>
	
</div>